generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  profileImage String?

  isVerified Boolean  @default(false)
  otpCode           String?   // The 6-digit code
  otpExpiresAt      DateTime? // Code validity (e.g., 2 mins)
  otpPurpose  String?
  
  resetToken  String?
  resetTokenExpiry DateTime?

  hashedRefreshToken String?
  allergies  String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  scans     ProductScan[]
  mealPlans MealPlan[]
  nutritionLogs NutritionLog[]
  savedRecipes SavedRecipe[]
}

model ProductScan {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  imageUrl    String?
  rawText     String   @db.Text

  productName String?
  novaScore   Int
  cleanRecipe String?  @db.Text

  additives   Json?
  isSafe      Boolean @default(true)
  allergenAlert String?
  
  
  // New Analytics Fields (from your code)
  ocrConfidence        Float?
  mlConfidence         Float?
  functionalCategories String[]
  estimatedShelfLife   String?
  
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([novaScore])
}

model NutritionLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  imageUrl  String?  // Photo of the meal
  mealType  String   // Breakfast, Lunch, Dinner, Snack
  
  // AI Estimates
  foodName  String
  calories  Int
  protein   Int
  carbs     Int
  fat       Int
  
  createdAt DateTime @default(now())
}

model MealPlan {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  startDate DateTime
  endDate   DateTime
  
  // Storing the full weekly plan as JSON
  // Structure: { "Monday": { "Breakfast": "Oats", ... }, ... }
  planData  Json 
  
  createdAt DateTime @default(now())
}

model SavedRecipe {
  id      String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  name  String
  data  Json
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}